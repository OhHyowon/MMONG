<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<context:component-scan base-package="kr.co.patch.controller"/>
	<mvc:annotation-driven/>
	
	<!-- ================ 링크 =============== -->
	<!-- 비인증 관련 -->
	<!-- 메인페이지 -->
	<mvc:view-controller path="/index.do" view-name="index"/>
	<!-- 로그인 폼 -->
	<mvc:view-controller path="/login_form.do" view-name="login_form"/>
	
	<!-- 관리자 등록 폼(register_form.jsp)  -->
	<mvc:view-controller path="/admin/register_form.do" view-name="content/admin/register_form"/>
	<!-- 관리자 찾기 폼 (search_admin_form.jsp) -->
	<mvc:view-controller path="/admin/search_admin_form.do" view-name="content/admin/search_admin_form"/>
	<!-- 병원회원 찾기 폼 (search_manager_form.jsp) -->
	<mvc:view-controller path="/admin/search_manager_form.do" view-name="content/admin/search_manager_form"/>
	<!-- 병원 등록 폼 (register_hospital_form.jsp) -->
	<mvc:view-controller path="/admin/register_hospital_form.do" view-name="content/admin/register_hospital_form"/>
	<!-- 병원 찾기 폼 (search_hospital_form.jsp) -->
	<mvc:view-controller path="/admin/search_hospital_form.do" view-name="content/admin/search_hospital_form"/>

	
	<!-- 개인회원 회원가입 폼 -->
	<mvc:view-controller path="/member/register_form.do" view-name="content/member/register_form"/>
	
	<!-- 병원회원 회원가입 폼 -->
	<mvc:view-controller path="/manager/register_form.do" view-name="content/manager/register_form"/>
	<!-- 병원회원 정보조회 -->
	<mvc:view-controller path="/manager/search_form.do" view-name="content/manager/search_form"/>
	





 	<bean name="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource"
				p:basename="kr.co.patch.validation.message.error_message" p:defaultEncoding="utf-8"/>

	<bean name="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"	p:prefix="/WEB-INF/view/" p:suffix=".jsp"/>
	


	 
</beans>
